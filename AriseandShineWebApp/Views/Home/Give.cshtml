@{
    ViewData["Title"] = "Give";
}

<style>
    body {
        margin: 0;
        font-family: 'Poppins', sans-serif;
    }

    .give-section {
        background: linear-gradient(135deg, #0f2027, #203a43, #2c5364);
        color: white;
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 60px 20px;
    }

    .give-container {
        background: white;
        border-radius: 20px;
        box-shadow: 0 20px 50px rgba(0, 0, 0, 0.3);
        max-width: 700px;
        width: 100%;
        padding: 50px;
        text-align: center;
        animation: fadeIn 1.2s ease;
    }

    @@keyframes fadeIn {
        from

    {
        opacity: 0;
        transform: translateY(30px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    .give-title {
        font-size: 38px;
        font-weight: 700;
        color: #222;
        margin-bottom: 15px;
    }

    .give-subtext {
        font-size: 18px;
        color: #555;
        margin-bottom: 40px;
    }

    .banking-details {
        background: #f7f9fa;
        border-radius: 12px;
        padding: 30px;
        margin-bottom: 30px;
        font-size: 20px;
        font-weight: 500;
        color: #333;
        line-height: 1.7;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
    }

    .capitec-logo {
        margin: 20px 0 20px 0;
    }

        .capitec-logo img {
            max-height: 200px; /* Increased size */
            width: auto;
            object-fit: contain;
        }

    .footer-contact {
        font-size: 14px;
        color: #777;
        margin-top: 5px;
    }

        .footer-contact a {
            color: #0077b6;
            text-decoration: none;
        }

            .footer-contact a:hover {
                text-decoration: underline;
            }

    @@media (max-width: 600px) {
        .give-container

    {
        padding: 30px 20px;
    }

    .give-title {
        font-size: 30px;
    }

    .banking-details {
        font-size: 18px;
    }

    .capitec-logo img {
        max-height: 100px; /* Slightly smaller for mobile */
    }

    }
</style>

<div class="give-section">
    <div class="give-container">
        <div class="give-title">Give</div>
        <div class="give-subtext">
            Thank you for your generosity. Your giving enables ministry, missions, and outreach.
        </div>

        <div class="banking-details">
            <div><strong>Arise and Shine Christian Church</strong></div>
            <div>Account Number: <strong>2025020720</strong></div>
            <div>Capitec Bank – <em>Savings Account</em></div>
        </div>

        <div class="capitec-logo">
            <img src="~/images/capitec-logo.png" alt="Capitec Bank Logo" />
        </div>

        <div class="footer-contact">
            For any giving-related inquiries, contact:
            <a href="mailto:giving@risenshrine.org">giving@risenshrine.org</a>
        </div>
    </div>
</div>
